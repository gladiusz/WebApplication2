@using WebApplication2.Models;
@model List<KsiazkaModel>
@{
    ViewBag.Title = "Index";
}

<h2>Biblioteka</h2>

<form method="get" action="/Biblioteka/Edit">
    <table>
        <tr>
            <th>Tytul</th>
            <th>Autor</th>
            <th>Liczba stron</th>
            <th>Okladka</th>
        </tr>
        @foreach (KsiazkaModel ksiazka in Model)
        {
            <tr>
                <td>@ksiazka.Tytul</td>
                <td>@ksiazka.Autor</td>
                <td>@ksiazka.IloscStron</td>
                <td>@ksiazka.Okladka</td>
                <td>@Html.ActionLink("Edytuj", "Edit", new { id = ksiazka.Id })</td>
                <td>@Html.ActionLink("Usun", "Delete", new { id = ksiazka.Id })</td>
            </tr>
        }
    </table>
    <a href="/Biblioteka/Edit">Dodaj</a>
</form>

